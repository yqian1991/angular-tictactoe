<!DOCTYPE html>
<html ng-app="angulartictactoe">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge" />
  <meta name="description" content="Game">
  <meta name="author" content="Yu Qian">

  <title>Game Only</title>

  <link rel="stylesheet" href="${request.static_url('angulartictactoe:static/css/bootstrap.min.css')}">
  <link rel="stylesheet" href="${request.static_url('angulartictactoe:static/css/bootstrap-theme.min.css')}">
  <link rel="stylesheet" href="${request.static_url('angulartictactoe:static/css/app.css')}">
</head>

<body>

<div class="container">

   <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand">Let's play the game</a>
            </div>
        </div>
   </div>

   <!-- The container is for game-->
   <div class="container">
       <div class="jumbotron">
           <div class="row">
              <div class="col-md-3">
                  <h2>
                      <span class="label label-primary">Player:</span>
                      <span class="label label-info" id="current_player">X</span>
                  </h2>
                  <p>log...<br>log...<br>log...<br>log...<br>log...<br>log...<br>log...<br>log...<br>log...<br>log...<br>

                  </p>
              </div>

              <div class="col-md-6">
                <h2><p> <a class="btn btn-lg btn-primary" id="new_game" role="button">New Game</a></p></h2>
                <table id="board">
                  <tr>
                    <td id="0"></td>
                    <td id="1"></td>
                    <td id="2"></td>
                  </tr>
                  <tr>
                    <td id="3"></td>
                    <td id="4"></td>
                    <td id="5"></td>
                  </tr>
                  <tr>
                    <td id="6"></td>
                    <td id="7"></td>
                    <td id="8"></td>
                  </tr>
                </table>
                <div class="alert alert-warning" role="alert" id="warning_alert">
                    <strong>Warning!</strong><p id="warning">...</p>
                </div>
              </div>

              <div class="col-md-3">
                <h2>　<span class="label label-primary">Game History</span></h2>
                <table data-toggle="table" id="history">
                    <tbody>
                        <tr>
                            <td id="h0">Board 1</td>
                        </tr>
                        <tr>
                            <td id="h2">Board 2</td>
                        </tr>
                    </tbody>
                </table>
              </div>
           </div>
       </div>
   </div>

   <!--The container for additional information-->
   <div class="container">
       <div class="jumbotron">
           <p><a class="btn btn-lg btn-primary" id="how_to_play" role='button'>How to Play</a></p>
           <p id="how_to_play_content"> </p>
       </div>
　　</div>

   <footer>
      <p>©Yu Qian 2015</p>
   </footer>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
<script src="${request.static_url('angulartictactoe:static/js/app.js')}"></script>
</body>
</html>